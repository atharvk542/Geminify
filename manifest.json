{
  "manifest_version": 3,
  "name": "Geminify",
  "description": "A way to know everything!",
  "version": "1.0",
  "background": {
      "service_worker": "scripts/events.js",
      "type": "module"
  },
  "permissions": ["contextMenus", "storage"],
  "web_accessible_resources": [
      {
          "resources": ["popups/explainpopup.html"],
          "matches": ["<all_urls>"]
      }
  ],
  "action": {
    "default_popup": "popups/extpopup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
